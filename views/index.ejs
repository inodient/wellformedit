      if( e.keyCode == 13 ){
        searchCheatsheet();
      }
    } );
    // ------ Search Function - End
  } );

  function searchCheatsheet(){
    let searchWord = $("#search-word").val();
    alert( searchWord );
    $(location).attr( "href", "./search?searchWord=" + searchWord );
  }

  function gotoTopicList(){
    $(location).attr( "href", "./topic" );
  }

  function gotoKeywordMap(){
    $(location).attr( "href", "./keywordmap" );
  }

  function gotoAbout(){
    $(location).attr( "href", "./about" );
  }

  function gotoSummerMVC(){
    $(location).attr( "href", "https://www.npmjs.com/package/summer-mvc" );
  }

</script>

